<h2>Sign Up Below!</h2>
<form action="/signup" method="POST">
    <div class="form-group<%= ' has-error' if @member.errors.include?(:email) %>">
        <input type="text" name="email" placeholder="Email" value="<%= @member.email %>">
        <% if !@member.valid? %>
            <% @member.errors.full_messages_for(:email).each do |message| %>
                <span class="help-block"><%= message %></span>
            <% end %>
        <% end %>
    </div>
    <div class="form-group<%= ' has-error' if @member.errors.include?(:password) %>">
        <input type="password" name="password" placeholder="Password">
        <% if !@member.valid? %>
            <% @member.errors.full_messages_for(:password).each do |message| %>
                <span class="help-block"><%= message %></span>
            <% end %>
        <% end %>
    <input type="submit" value="Sign Up">
</form>
